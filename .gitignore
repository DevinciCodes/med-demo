cat > .gitignore << 'EOF'
# --- Node / monorepo ---
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# --- Env files (keep examples tracked) ---
.env
.env.*
!.env.example
client/.env
client/.env.*
!client/.env.example
server/.env
server/.env.*
!server/.env.example

# --- Build artifacts ---
dist/
build/
*.tsbuildinfo
client/dist/
client/.vite/
client/.cache/
server/dist/

# --- Logs & runtime junk ---
logs/
*.log
*.log.*
pids/
*.pid
*.seed
*.pid.lock

# --- Coverage / caches / temp ---
coverage/
.cache/
.tmp/
.temp/

# --- OS cruft ---
.DS_Store
Thumbs.db

# --- Editors / IDEs ---
.vscode/
.idea/
*.swp
